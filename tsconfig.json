{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "erasableSyntaxOnly": true
  },
  "include": [
    "src",
    "tests",
    "benchmarks",
    "rkyv-example"
  ],
  "exclude": [
    "**/node_modules",
    "**/target"
  ]
}
